{% extends 'base.html.twig' %}
{% block meta_title %}{% endblock %}
{% block content %}
    <div class="container" id="main">
        {% form_theme form 'form/form_theme.html.twig' %}
        {{ form_start( form ) }}
        {{ form_row( form.date, {
            'label': 'app.wod.form.date',
        } ) }}
        {{ form_row( form.type, {
            'label': 'app.wod.form.type',
        } ) }}
        <div class="form-group">
            <label class="control-label required">{{ 'app.wod.form.movements'|trans }}</label>
            <ul class="movements"
                data-prototype="{{ form_widget(form.movements.vars.prototype)|e }}">
                {% for movementField in form.movements %}
                    <li>
                        {{ form_errors(movementField) }}
                        {{ form_widget(movementField) }}
                    </li>
                {% endfor %}
            </ul>
            <input type="hidden" id="label_add" value="{{ "app.wod.form.add_movement"|trans }}"/>
        </div>
        {{ form_row( form.score, {
            'label': 'app.wod.form.score',
        } ) }}
        {{ form_row( form.comment, {
            'label': 'app.wod.form.comment',
        } ) }}

        {{ form_row( form.save, {
            'label': "app.session.form.save",
        } ) }}
        {{ form_end( form ) }}
    </div>
{% endblock %}
