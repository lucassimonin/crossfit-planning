{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN") %}
    <td>
        <a href="{{ path(type ~ '_add', {'id': id}) }}" title="Edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        {% if remove %}
            <a href="{{ path('admin_remove', {'id': id, 'entity': type}) }}" title="Remove"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        {% endif %}
    </td>
{% endif %}
