{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER_ADMIN") %}
    <td>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="{{ path(type ~ '_add', {'id': id}) }}" class="btn btn-default" title="Edit">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            {% if remove %}
                <a href="{{ path('admin_remove', {'id': id, 'entity': type}) }}" title="Remove" class="btn btn-default">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            {% endif %}
            <a href="{{ path('homepage') ~ '?_switch_user=' ~ username }}" class="btn btn-default">
                <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span>
            </a>
        </div>
    </td>
{% endif %}
